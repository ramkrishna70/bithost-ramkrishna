{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "downlevelIteration": true,
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
        "node",
        "jasmine"
    ],
    "paths": {
        "@assets/*": [ "assets/*" ],
        "@pipes/*": ["app/customPipes/*"],
        "@env": [ "environments/environment" ],
        "@services/*": [ "app/services/*" ],
        "@components/*": ["app/components/*"],
        "@guards/*": ["app/guards/*"],
        "@app/*": ["app/*"], 
        "@pages/*": ["app/pages/*"]
    },
    "lib": [
      "es2018",
      "dom"
    ],
    "strict": false
  },

  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
